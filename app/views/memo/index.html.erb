<div class="messages">
  <% @posts.each do |post| %>
  <ul class="content">
      <li class="message">
        <%= post.content %>
        <ul>
          <li class="btn">
            <%= link_to "編集", edit_memo_path(post), class: "edit-btn" %>
          </li>
          <li class="btn">
            <%= link_to "削除", memo_path(post.id), class: "delete-btn", method: :delete %>
          </li>
        </ul>
      </li>
  </ul>
  <% end %>
</div>